@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  body {
    @apply bg-esm-darker text-white;
    font-family: 'Inter', system-ui, -apple-system, sans-serif;
  }
}

@layer components {
  /* Animaciones suaves */
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in-out;
  }

  .animate-slide-up {
    animation: slideUp 0.5s ease-out;
  }

  .animate-slide-in-right {
    animation: slideInRight 0.3s ease-out;
  }

  /* Estilos para el input */
  .input-esm {
    @apply w-full bg-transparent border-b border-gray-600 pb-2 pt-4 text-white placeholder-gray-500 focus:outline-none focus:border-esm-gold transition-colors duration-300;
  }

  /* Estilos para el bot√≥n */
  .btn-esm {
    @apply w-full py-4 mt-8 bg-transparent border border-esm-gold text-esm-gold rounded-full font-medium hover:bg-esm-gold hover:text-black transition-all duration-300 uppercase tracking-wider;
  }

  /* Efecto hover en el logo */
  .logo-hover {
    @apply transition-transform duration-300 hover:scale-105;
  }

  /* Contenedor del formulario */
  .form-container {
    @apply w-full max-w-md mx-auto px-8;
  }

  /* Efecto de sombra suave */
  .soft-shadow {
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.3);
  }
}

/* Animaciones personalizadas */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes slideUp {
  from {
    transform: translateY(20px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes slideInRight {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}

/* Estilos adicionales para el fondo */
.gradient-bg {
  background: radial-gradient(ellipse at top, #1a1a1a 0%, #0f0f0f 100%);
}

/* Efecto de brillo en el logo */
.logo-glow {
  filter: drop-shadow(0 0 20px rgba(212, 175, 55, 0.3));
}

/* Estilo para el eye icon del password */
.password-toggle {
  @apply absolute right-0 top-1/2 transform -translate-y-1/2 text-gray-500 hover:text-gray-300 transition-colors cursor-pointer;
}